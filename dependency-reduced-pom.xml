        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>MPets</groupId>
      <artifactId>com.kirelcodes.miniaturepets</artifactId>
      <version>1.5</version>
      <scope>system</scope>
      <systemPath>/home/nathan/IdeaProjects/StackMob 2/jars/MiniaturePetsAPI.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>MythicMobs</groupId>
      <artifactId>io.lumine.xikage</artifactId>
